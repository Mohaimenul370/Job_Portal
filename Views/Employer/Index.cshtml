
@model IEnumerable<JP2.Models.Employer>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>




@if (Context.User.IsInRole("Admin") || Context.User.IsInRole("Employer"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CompanyWebsite)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyWebsite)
            </td>
            <td>
                    @if (Context.User.IsInRole("Admin") || Context.User.IsInRole("Employer"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
                    }
                    @if (Context.User.IsInRole("Admin") || Context.User.IsInRole("Employer"))
                    {
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> 
                    }
                    @if (Context.User.IsInRole("Admin") || Context.User.IsInRole("Employer"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
            </td>
        </tr>
}
    </tbody>
</table>
