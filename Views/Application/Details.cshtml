@model JP2.Models.Application

@{
    ViewData["Title"] = "Application Details";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header Section -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Application Details</h1>
            <p class="text-gray-600 mt-2">View application information</p>
        </div>

        <!-- Details Card -->
        <div class="card">
            <div class="card-header">
                <h2 class="text-2xl font-bold text-gray-800">Application Information</h2>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-4">
                    <div>
                        <dt class="text-sm font-medium text-gray-500 uppercase tracking-wide">Application Date</dt>
                        <dd class="mt-1 text-lg text-gray-900">@Html.DisplayFor(model => model.ApplicationDate)</dd>
                    </div>
                    
                    <div>
                        <dt class="text-sm font-medium text-gray-500 uppercase tracking-wide">Job Title</dt>
                        <dd class="mt-1 text-lg font-medium text-gray-900">@Html.DisplayFor(model => model.JobTitle)</dd>
                    </div>
                </div>
                
                <div class="space-y-4">
                    <div>
                        <dt class="text-sm font-medium text-gray-500 uppercase tracking-wide">Applicant</dt>
                        <dd class="mt-1 text-lg text-gray-900">@Html.DisplayFor(model => model.User.UserEmail)</dd>
                    </div>
                    
                    <div>
                        <dt class="text-sm font-medium text-gray-500 uppercase tracking-wide">Job Description</dt>
                        <dd class="mt-1 text-lg text-gray-900">@Html.DisplayFor(model => model.Job.JobDescription)</dd>
                    </div>
                </div>
            </div>
            
            <div class="mt-8 pt-6 border-t border-gray-200">
                <div class="flex space-x-4">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn-secondary">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                        </svg>
                        Edit
                    </a>
                    <a asp-action="Index" class="btn-primary">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                        </svg>
                        Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
