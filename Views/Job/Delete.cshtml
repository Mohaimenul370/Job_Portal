@model JP2.Models.Job

@{
    ViewData["Title"] = "Delete Job";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header Section -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Delete Job</h1>
            <p class="text-gray-600 mt-2">Remove job from the system</p>
        </div>

        <!-- Warning Alert -->
        <div class="alert alert-warning mb-6">
            <div class="flex">
                <svg class="w-6 h-6 mr-3 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                </svg>
                <div>
                    <h3 class="text-lg font-medium text-yellow-800">Are you sure you want to delete this job?</h3>
                    <p class="text-yellow-700 mt-1">This action cannot be undone.</p>
                </div>
            </div>
        </div>

        <!-- Job Details Card -->
        <div class="card">
            <div class="card-header">
                <h2 class="text-2xl font-bold text-gray-800">@Html.DisplayFor(model => model.JobTitle)</h2>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-4">
                    <div>
                        <dt class="text-sm font-medium text-gray-500 uppercase tracking-wide">Job Title</dt>
                        <dd class="mt-1 text-lg font-medium text-gray-900">@Html.DisplayFor(model => model.JobTitle)</dd>
                    </div>
                    
                    <div>
                        <dt class="text-sm font-medium text-gray-500 uppercase tracking-wide">Salary</dt>
                        <dd class="mt-1 text-lg font-semibold text-green-600">@Html.DisplayFor(model => model.Salary)</dd>
                    </div>
                    
                    <div>
                        <dt class="text-sm font-medium text-gray-500 uppercase tracking-wide">Job Location</dt>
                        <dd class="mt-1 text-lg text-gray-900">@Html.DisplayFor(model => model.JobLocation)</dd>
                    </div>
                </div>
                
                <div class="space-y-4">
                    <div>
                        <dt class="text-sm font-medium text-gray-500 uppercase tracking-wide">Post Date</dt>
                        <dd class="mt-1 text-lg text-gray-900">@Html.DisplayFor(model => model.PostDate)</dd>
                    </div>
                    
                    <div>
                        <dt class="text-sm font-medium text-gray-500 uppercase tracking-wide">Employer</dt>
                        <dd class="mt-1 text-lg text-gray-900">@Html.DisplayFor(model => model.Employer.CompanyDescription)</dd>
                    </div>
                </div>
                
                <div class="md:col-span-2">
                    <dt class="text-sm font-medium text-gray-500 uppercase tracking-wide">Job Description</dt>
                    <dd class="mt-1 text-lg text-gray-900 leading-relaxed">@Html.DisplayFor(model => model.JobDescription)</dd>
                </div>
            </div>
            
            <div class="mt-8 pt-6 border-t border-gray-200">
                <form asp-action="Delete" class="flex space-x-4">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn-danger">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                        </svg>
                        Delete Job
                    </button>
                    <a asp-action="Index" class="btn-secondary">
                        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                        </svg>
                        Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>
