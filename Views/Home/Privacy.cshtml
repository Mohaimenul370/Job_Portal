@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="card">
            <div class="card-header">
                <h1 class="text-3xl font-bold text-gray-900">@ViewData["Title"]</h1>
            </div>
            
            <div class="prose prose-lg max-w-none">
                <p class="text-gray-700 leading-relaxed">
                    Use this page to detail your site's privacy policy. This section can include information about:
                </p>
                
                <ul class="list-disc list-inside mt-4 space-y-2 text-gray-700">
                    <li>How we collect and use your personal information</li>
                    <li>Data protection and security measures</li>
                    <li>Your rights regarding your personal data</li>
                    <li>Contact information for privacy concerns</li>
                    <li>Updates to this privacy policy</li>
                </ul>
                
                <div class="mt-8 p-4 bg-blue-50 rounded-lg">
                    <h3 class="text-lg font-semibold text-blue-900 mb-2">Contact Us</h3>
                    <p class="text-blue-800">
                        If you have any questions about this Privacy Policy, please contact us at 
                        <a href="mailto:privacy@jp2.com" class="text-blue-600 hover:text-blue-800 underline">privacy@jp2.com</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
