@model IEnumerable<JP2.Models.Job>
@{
    ViewData["Title"] = "Home Page";
    int i=1;
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header Section -->
        <div class="text-center mb-8">
            <h1 class="text-4xl font-bold text-gray-900 mb-4">Welcome to JP2</h1>
            <p class="text-xl text-gray-600">Find your dream job today</p>
        </div>

        <!-- Jobs Table Section -->
        <div class="card">
            <div class="card-header">
                <h2 class="text-2xl font-bold text-gray-800">Available Jobs</h2>
            </div>
            
            <div class="overflow-x-auto">
                <table id="jobtable" class="table">
                    <thead class="table-header">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.JobTitle)</th>
                            <th>@Html.DisplayNameFor(model => model.JobDescription)</th>
                            <th>@Html.DisplayNameFor(model => model.Salary)</th>
                            <th>@Html.DisplayNameFor(model => model.JobLocation)</th>
                            <th>@Html.DisplayNameFor(model => model.PostDate)</th>
                            <th>@Html.DisplayNameFor(model => model.Employer)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody class="table-body">
                        @foreach (var item in Model)
                        {
                            <tr class="table-row">
                                <td class="table-cell font-medium">@Html.DisplayFor(modelItem => item.JobTitle)</td>
                                <td class="table-cell">@Html.DisplayFor(modelItem => item.JobDescription)</td>
                                <td class="table-cell font-semibold text-green-600">@Html.DisplayFor(modelItem => item.Salary)</td>
                                <td class="table-cell">@Html.DisplayFor(modelItem => item.JobLocation)</td>
                                <td class="table-cell">@Html.DisplayFor(modelItem => item.PostDate)</td>
                                <td class="table-cell">@Html.DisplayFor(modelItem => item.Employer.CompanyDescription)</td>
                                <td class="table-cell">
                                    <div class="flex space-x-2">
                                        @if (Context.User.IsInRole("Admin") || Context.User.IsInRole("Employer"))
                                        {
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn-secondary text-sm">Edit</a>
                                        }
                                        @if (Context.User.Identity.IsAuthenticated)
                                        {
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn-primary text-sm">Details</a>
                                        }
                                        @if (Context.User.IsInRole("Admin") || Context.User.IsInRole("Employer"))
                                        {
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn-danger text-sm">Delete</a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#jobtable').DataTable({
                responsive: true,
                language: {
                    search: "Search jobs:",
                    lengthMenu: "Show _MENU_ jobs per page",
                    info: "Showing _START_ to _END_ of _TOTAL_ jobs"
                }
            });
        })
    </script>
}
